{
    "name": "zikula/search-module",
    "version": "3.1.0-dev",
    "description": "Site search support",
    "type": "zikula-system-module",
    "license": "LGPL-3.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Zikula",
            "homepage": "https://ziku.la/"
        }
    ],
    "autoload": {
        "psr-4": { "Zikula\\SearchModule\\": "" }
    },
    "require": {
        "php": ">=7.2.5",
        "symfony/config": "^5.2",
        "symfony/dependency-injection": "^5.2",
        "symfony/event-dispatcher": "^5.2",
        "symfony/form": "^5.2",
        "symfony/http-foundation": "^5.2",
        "symfony/http-kernel": "^5.2",
        "symfony/routing": "^5.2",
        "symfony/validator": "^5.2",

        "zikula/core-bundle": "self.version",
        "zikula/blocks-module": "self.version",
        "zikula/extensions-module": "self.version",
        "zikula/menu-module": "self.version",
        "zikula/permissions-module": "self.version",
        "zikula/theme-module": "self.version",
        "zikula/users-module": "self.version"
    },
    "extra": {
        "zikula": {
            "class": "Zikula\\SearchModule\\ZikulaSearchModule",
            "core-compatibility": ">=3.0.0",
            "displayname": "Site search",
            "url": "search",
            "icon": "fas fa-search",
            "capabilities": {
                "admin": {
                    "route": "zikulasearchmodule_config_config"
                },
                "user": {
                    "route": "zikulasearchmodule_search_execute"
                }
            },
            "securityschema": {
                "ZikulaSearchModule::": "Module name::",
                "Searchblock::": "Block title::"
            }
        }
    }
}
