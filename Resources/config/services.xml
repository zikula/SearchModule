<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zikulasearchmodule.front_controller_listener.class">Zikula\SearchModule\Listener\FrontControllerListener</parameter>
        <parameter key="zikulasearchmodule.module_event_listener.class">Zikula\SearchModule\Listener\ModuleEventListener</parameter>
    </parameters>

    <services>
        <service id="zikulasearchmodule.front_controller_listener" class="%zikulasearchmodule.front_controller_listener.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="router" />
        </service>
        <service id="zikulasearchmodule.module_event_listener" class="%zikulasearchmodule.module_event_listener.class%">
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>

